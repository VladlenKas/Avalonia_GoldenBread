<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="20">
			<StackPanel Spacing="12">
				<TextBox Width="200" Height="40" Watermark="Inter email"/>
				<TextBox Width="200" Height="40" Watermark="Inter pass"/>
				<Button Width="200" Height="40" Content="Войти" IsEnabled="True"/>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<!-- Window -->
	<Style Selector="Window">
		<Setter Property="Icon" Value="/Assets/goldenbread-logo.ico"/>
		<Setter Property="WindowStartupLocation" Value="CenterScreen"/>
		<Setter Property="Background" Value="White"/>
	</Style>

	<!-- Region TextBlocks -->
	<Style Selector="TextBlock">
		<Setter Property="FontFamily" Value="sf pro display"/>
	</Style>

	<Style Selector="TextBlock.h1">
		<Setter Property="FontSize" Value="36"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<Style Selector="TextBlock.h2">
		<Setter Property="FontSize" Value="28"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<Style Selector="TextBlock.h3">
		<Setter Property="FontSize" Value="26"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
	</Style>

	<Style Selector="TextBlock.h4">
		<Setter Property="FontSize" Value="24"/>
		<Setter Property="FontWeight" Value="Medium"/>
	</Style>

	<Style Selector="TextBlock.h5">
		<Setter Property="FontSize" Value="22"/>
		<Setter Property="FontWeight" Value="Medium"/>
	</Style>

	<Style Selector="TextBlock.h6">
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="FontWeight" Value="Medium"/>
	</Style>

	<Style Selector="TextBlock.regular">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="FontWeight" Value="Regular"/>
	</Style>

	<Style Selector="TextBlock.textBoxLabel">
		<Setter Property="Padding" Value="5"/>
	</Style>

	<!-- Region TextBoxes -->
	<Style Selector="TextBox">
		<Setter Property="Background" Value="#ffffff"/>
		<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"/>
		<Setter Property="Foreground" Value="#80000000"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Padding" Value="12"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="BorderThickness" Value="1.5"/>
		<Setter Property="BorderBrush" Value="#20000000"/>
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="SelectionBrush" Value="LightBlue"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>

		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Foreground" Duration="0:0:0.2"/>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>

		<Style Selector="^:focus /template/ Border#PART_BorderElement">
			<Setter Property="BorderBrush" Value="{DynamicResource focusTextBoxColor}"/>
			<Setter Property="Background" Value="Transparent"/>
		</Style>

		<Style Selector="^:pointerover /template/ Border#PART_BorderElement">
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>
	</Style>

	<!-- Region Buttons -->
	<Style Selector="Button">
		<Setter Property="Background" Value="{DynamicResource defaultButtonColor}"/>
		<Setter Property="Foreground" Value="#ffffff"/>
		<Setter Property="MinHeight" Value="40"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Padding" Value="12"/>
		<Setter Property="CornerRadius" Value="12"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>

		<Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="Background" Value="{DynamicResource hoverButtonColor}"/>
			<Setter Property="Foreground" Value="#90ffffff"/>
			<Setter Property="Transitions">
					<Transitions>
						<BrushTransition Property="Background" Duration="0:0:0.5"/>
					</Transitions>
			</Setter>
		</Style>

		<Style Selector="^:disabled /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="Background" Value="{DynamicResource defaultButtonColor}"/>
			<Setter Property="Foreground" Value="#90ffffff"/>
			<Setter Property="Opacity" Value="0.5"/>
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.5"/>
				</Transitions>
			</Setter>
		</Style>

		
		<Style Selector="^:pressed /template/ ContentPresenter#PART_ContentPresenter">
			<Setter Property="Background" Value="{DynamicResource pressedButtonColor}"/>
			<Setter Property="Foreground" Value="#90ffffff"/>
			<Setter Property="Opacity" Value="0.5"/>
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.5"/>
				</Transitions>
			</Setter>
		</Style>
	</Style>

	<Style Selector="HeaderedContentControl">
		<Setter Property="Template">
			<ControlTemplate>
				<StackPanel>
					<TextBlock Text="{TemplateBinding Header}" 
							   FontSize="14"
							   Margin="0 0 0 5"
							   Foreground="{DynamicResource TextControlHeaderForeground}"/>
					<ContentPresenter Content="{TemplateBinding Content}"/>
				</StackPanel>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
