<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
  
	<!-- Medium -->
	<Style Selector="ToggleButton materialIcons|MaterialIcon.Medium, 
    RadioButton materialIcons|MaterialIcon.Medium, 
    TextBox materialIcons|MaterialIcon.Medium">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Background" Value="{Binding $parent[ContentControl].Foreground}"/>
    </Style>
  
    <Style Selector="ToggleButton materialIcons|MaterialIcon.Medium">
        <Setter Property="Kind" Value="{Binding $parent[ToggleButton].Tag}"/>
    </Style>

    <Style Selector="RadioButton materialIcons|MaterialIcon.Medium">
        <Setter Property="Kind" Value="{Binding $parent[RadioButton].Tag}"/>
    </Style>

    <Style Selector="TextBox materialIcons|MaterialIcon.Medium">
        <Setter Property="Kind" Value="{Binding $parent[TextBox].Tag}"/>
    </Style>

</Styles>
