<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:icon="https://github.com/projektanker/icons.avalonia">
  
	<!-- Medium -->
	<Style Selector="ToggleButton icon|Icon.Medium, 
        RadioButton icon|Icon.Medium,
        TextBox icon|Icon.Medium">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Background" Value="{Binding $parent[ContentControl].Foreground}"/>
    </Style>
  
    <Style Selector="ToggleButton icon|Icon.Medium">
        <Setter Property="Value" Value="{Binding $parent[ToggleButton].Tag}"/>
    </Style>

    <Style Selector="RadioButton icon|Icon.Medium">
        <Setter Property="Value" Value="{Binding $parent[RadioButton].Tag}"/>
    </Style>

    <Style Selector="TextBox icon|Icon.Medium">
        <Setter Property="Value" Value="{Binding $parent[TextBox].Tag}"/>
    </Style>

</Styles>
