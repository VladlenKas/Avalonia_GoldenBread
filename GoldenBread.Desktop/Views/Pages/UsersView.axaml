<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GoldenBread.Desktop.Views.Pages.UsersView"
             xmlns:vm="using:GoldenBread.Desktop.ViewModels.Pages"
             xmlns:controls="using:GoldenBread.Desktop.Views.Controls"
             x:DataType="vm:UsersViewModel">

    <UserControl.Resources>
        <DataTemplate x:Key="MainContent" x:DataType="vm:UsersViewModel">
            <Grid RowDefinitions="Auto *" RowSpacing="24" Margin="24">
                <controls:ToolbarView Grid.Row="0"/>
                <Grid Grid.Row="1">
                    <ProgressBar IsIndeterminate="True" 
                                 IsVisible="{Binding IsLoading}"
                                 Height="4"
                                 VerticalAlignment="Top"
                                 ZIndex="1"/>

                    <DataGrid ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem}"
                              IsEnabled="{Binding !IsLoading}"
                              DoubleTapped="DataGrid_OnDoubleTapped"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="60"/>
                            <DataGridTextColumn Header="Фамилия, имя, отчество" Binding="{Binding Fullname}" Width="*"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding RoleValue}" Width="200"/>
                            <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birthday}" Width="150"/>
                            <DataGridTextColumn Header="Эл. почта" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding VerificationStatusValue}" Width="180"/>
                            <DataGridTextColumn Header="Заказов" Binding="{Binding Orders.Count}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DetailPanel" x:DataType="vm:UsersViewModel">
            <StackPanel Spacing="12">
                <TextBlock Text="Характеристики" Classes="H6"/>

                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Фамилия" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             MaxLength="50"
                             Watermark="Введите фамилию *"
                             Text="{Binding EditLastname}" 
                             Classes="SplitView"/>
                </Grid>

                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Имя" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             MaxLength="50"
                             Watermark="Введите имя *"
                             Text="{Binding EditFirstname}" 
                             Classes="SplitView"/>
                </Grid>

                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Отчество" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             MaxLength="50"
                             Watermark="Введите отчество"
                             Text="{Binding EditPatronymic}" 
                             Classes="SplitView"/>
                </Grid>

                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Дата рожд." 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <MaskedTextBox Grid.Column="1" 
                                   MaxLength="8"
                                   Watermark="Введите дату рождения *"
                                   Text="{Binding EditBirthday}" 
                                   Classes="SplitView" Mask="00/00/0000"/>
                </Grid>

                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Эл. почта" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             MaxLength="255"
                             Watermark="Введите электронную почту *"
                             Text="{Binding EditEmail}" 
                             Classes="SplitView"/>
                </Grid>

                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Пароль" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             MaxLength="255"
                             Watermark="Введите пароль *"
                             Text="{Binding EditPassword}" 
                             Classes="SplitView"/>
                </Grid>
                
                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Должность" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" 
                              PlaceholderText="Укажите должность *"
                              ItemsSource="{Binding AvailableRoles}" 
                              SelectedItem="{Binding EditRole}"
                              DisplayMemberBinding="{Binding DisplayName}"
                              Classes="SplitView"/>
                </Grid>
                
                <Grid ColumnDefinitions="Auto *" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" 
                               Text="Статус" 
                               Classes="Regular" 
                               Foreground="{DynamicResource Foreground.Secondary}" 
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" 
                              PlaceholderText="Укажите статус *"
                              ItemsSource="{Binding AvailableStatuses}" 
                              SelectedItem="{Binding EditStatus}"
                              DisplayMemberBinding="{Binding DisplayName}"
                              Classes="SplitView"/>
                </Grid>

            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <controls:DetailSplitView MainContentTemplate="{StaticResource MainContent}"
                              DetailPanelTemplate="{StaticResource DetailPanel}"/>

</UserControl>
