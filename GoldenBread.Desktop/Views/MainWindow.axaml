<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GoldenBread.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="GoldenBread.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="1000" Height="600"
        MinWidth="1000" MinHeight="600"
        Title="Приветствие"
        CanMaximize="False">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="48" ColumnDefinitions="*,*" ColumnSpacing="48">

        <!-- Изображение -->
        <Grid Grid.Column="0">
            <Border Grid.Column="1" ClipToBounds="True" CornerRadius="20" >
		        <Image Source="/Assets/goldenbread-preview.webp" Stretch="UniformToFill"/>
            </Border>
            <DockPanel LastChildFill="False">
			    <TextBlock Classes="h1"
                           Foreground="#ffffff"
                           Text="От зерна до зерна - полный контроль"
                           Padding="32"
                           TextWrapping="Wrap"
                           DockPanel.Dock="Top"/>
                <TextBlock Classes="h6"
                           Foreground="{DynamicResource secondaryTextColor}"
                           Text="Современное решение для ведения учета данных собственного бизнеса"
                           Padding="32"
                           TextWrapping="Wrap"
                           DockPanel.Dock="Bottom"/>
            </DockPanel>
        </Grid>

        <!-- Элементы -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Spacing="32" >
            <StackPanel Orientation="Horizontal" Spacing="8">
			    <Image Source="/Assets/goldenbread-logo.png" Width="40"/>
                <TextBlock VerticalAlignment="Center" 
                           Text="Golden Bread"
                           FontWeight="Bold"
                           Classes="h4" 
                           Foreground="{DynamicResource specificColor}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Давйте начнем" Classes="h2"/>
                <TextBlock Text="Для входа в систему пройдите авторизацию" 
                           Classes="h6"
                           Foreground="{DynamicResource secondaryTextColor}"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <Separator Background="{DynamicResource tertiaryTextColor}"/>

            <StackPanel Spacing="12">
                 <HeaderedContentControl Header="Электронная почта">
                    <TextBox Text="{Binding Email}"
                             Watermark="Введите email"
                             MaxLength="255"/>
                </HeaderedContentControl>
    
                <HeaderedContentControl Header="Пароль">
                    <TextBox Text="{Binding Password}"
                             Watermark="Введите пароль"
                             MaxLength="255"
                             PasswordChar="•"/>
                </HeaderedContentControl>
            </StackPanel>

            <StackPanel>
                <Button Content="Отправить" Command="{Binding LoginUserCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
 