<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GoldenBread.Desktop.App"
             xmlns:local="using:GoldenBread.Desktop"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Resources/Colors.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="/Resources/IconStyles.axaml"/>
        <StyleInclude Source="/Resources/ButtonStyles.axaml"/>
        <StyleInclude Source="/Resources/TextBoxStyles.axaml"/>
        <StyleInclude Source="/Resources/TextBlockStyles.axaml"/>
        <StyleInclude Source="/Resources/OptionalStyles.axaml"/>
        <StyleInclude Source="/Resources/ComboBoxStyles.axaml"/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <FluentTheme />
    </Application.Styles>
</Application>